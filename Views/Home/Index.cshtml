@{
    Layout = null; // Important: Disables default layout
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Welcome | Inventory System</title>
    <style>
        /* Modern gradient background */
        body {
            background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);
            height: 100vh;
            overflow: hidden;
            display: flex;
            justify-content: center;
            align-items: center;
            margin: 0;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        /* Main content container */
        .welcome-container {
            text-align: center;
            max-width: 800px;
            padding: 2rem;
            z-index: 10;
        }

        /* Animated text elements */
        .welcome-text {
            font-size: 4rem;
            font-weight: 800;
            color: white;
            text-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
            margin-bottom: 1.5rem;
            opacity: 0;
            transform: translateY(30px);
            animation: fadeInUp 1.2s ease-out 0.5s forwards;
        }

        .subtitle {
            font-size: 1.5rem;
            color: rgba(255, 255, 255, 0.85);
            margin-bottom: 2.5rem;
            opacity: 0;
            animation: fadeIn 1.8s ease-out 1.2s forwards;
        }

        .redirect-message {
            color: rgba(255, 255, 255, 0.7);
            font-size: 1.1rem;
            opacity: 0;
            animation: fadeIn 1s ease-out 3s forwards;
        }

        /* Animated progress bar */
        .progress-bar {
            width: 300px;
            height: 6px;
            background: rgba(255, 255, 255, 0.2);
            margin: 30px auto;
            border-radius: 3px;
            overflow: hidden;
            opacity: 0;
            animation: fadeIn 0.8s ease-out 2s forwards;
        }

            .progress-bar::after {
                content: '';
                display: block;
                width: 0;
                height: 100%;
                background: white;
                border-radius: 3px;
                animation: load 3s ease-in-out 2.3s forwards;
            }

        /* Decorative floating elements */
        .floating-elements div {
            position: absolute;
            border-radius: 50%;
            background: rgba(255, 255, 255, 0.1);
            z-index: -1;
        }

            .floating-elements div:nth-child(1) {
                width: 120px;
                height: 120px;
                top: 15%;
                left: 10%;
                animation: float 18s infinite linear;
            }

            .floating-elements div:nth-child(2) {
                width: 80px;
                height: 80px;
                top: 75%;
                left: 85%;
                animation: float 14s infinite linear;
            }

            .floating-elements div:nth-child(3) {
                width: 160px;
                height: 160px;
                top: 40%;
                left: 75%;
                animation: float 22s infinite linear;
            }

        /* Keyframe animations */
        @@keyframes fadeInUp {
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @@keyframes fadeIn {
            to {
                opacity: 1;
            }
        }

        @@keyframes load {
            to {
                width: 100%;
            }
        }

        @@keyframes float {
            0% {
                transform: translateY(0) rotate(0deg);
            }

            50% {
                transform: translateY(-25px) rotate(180deg);
            }

            100% {
                transform: translateY(0) rotate(360deg);
            }
        }

        /* Responsive adjustments */
        @@media (max-width: 768px) {
            .welcome-text {
                font-size: 3rem;
            }

            .subtitle {
                font-size: 1.2rem;
            }

            .progress-bar {
                width: 200px;
            }
        }
    </style>
</head>
<body>
    <div class="floating-elements">
        <div></div>
        <div></div>
        <div></div>
    </div>

    <div class="welcome-container">
        <h1 class="welcome-text">Welcome to Inventory System</h1>
        <p class="subtitle">Streamline your inventory management</p>
        <div class="progress-bar"></div>
        <p class="redirect-message">Redirecting to login page...</p>
    </div>

    <script>
        // Redirect after animations complete (5.5 seconds)
        setTimeout(() => {
            window.location.href = '@Url.Action("Login", "Account")';
        }, 5500);
    </script>
</body>
</html>