@using InventorySolution.Models.ViewModels
@model ChangePasswordViewModel

@{
    ViewData["Title"] = "Change Password";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<form asp-action="ChangePassword" method="post">
    <h3>Change Password</h3>

    @Html.AntiForgeryToken()
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-wrapper">
        <label asp-for="Email" class="form-label"></label>
        <input asp-for="Email" class="form-control" readonly />
    </div>

    <div class="form-group">
        <div class="form-wrapper">
            <label asp-for="NewPassword" class="form-label">New Password</label>
            <input asp-for="NewPassword" type="password" class="form-control" />
            <span asp-validation-for="NewPassword" class="text-danger"></span>
        </div>
        <div class="form-wrapper">
            <label asp-for="ConfirmNewPassword" class="form-label">Confirm Password</label>
            <input asp-for="ConfirmNewPassword" type="password" class="form-control" />
            <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
        </div>
    </div>

    <button type="submit">Update Password</button>

    <div class="text-center mt-3">
        <a asp-action="VerifyEmail" class="text-decoration-none">Back to Recovery</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}