@using InventorySolution.Models.Entities
@model IEnumerable<Category>
@{
    ViewData["Title"] = "Categories";
    Layout = "_AdminLayout";
}

<div class="container-fluid px-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mt-4">
            <i class="bi bi-tags me-2"></i>Categories
        </h1>
        <a asp-action="Create" class="btn btn-purple">
            <i class="bi bi-plus-circle me-1"></i> Create New
        </a>
    </div>

    <div class="card mb-4">
        <div class="card-header bg-darkpurple text-white">
            <div class="d-flex justify-content-between align-items-center">
                <span><i class="bi bi-list me-1"></i> Category List</span>
                <form asp-action="Index" method="get" class="d-flex" style="width: 300px;">
                    <div class="input-group">
                        <input type="text" name="searchString" class="form-control"
                               placeholder="Search categories..." value="@ViewData["CurrentFilter"]">
                        <button class="btn btn-outline-light" type="submit">
                            <i class="bi bi-search"></i>
                        </button>
                    </div>
                </form>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>ID</th>
                            <th>Category Name</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Name</td>
                                <td class="text-end">
                                    <div class="btn-group">
                                        <a asp-action="Edit" asp-route-id="@item.Id"
                                           class="btn btn-sm btn-outline-purple">
                                            <i class="bi bi-pencil-square"></i> Edit
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id"
                                           class="btn btn-sm btn-outline-danger">
                                            <i class="bi bi-trash"></i> Delete
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>