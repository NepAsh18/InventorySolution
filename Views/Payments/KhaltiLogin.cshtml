@model InventorySolution.Models.ViewModels.PaymentViewModel

<style>
    .payment-header {
        background: linear-gradient(135deg, #5C2D91, #3a1a5e);
        color: white;
    }

    .payment-btn-primary {
        background: linear-gradient(135deg, #5C2D91, #3a1a5e);
        border: none;
    }

        .payment-btn-primary:hover {
            background: linear-gradient(135deg, #3a1a5e, #5C2D91);
        }
</style>

<div class="payment-modal-header text-center py-4 payment-header">
    <div class="khalti-logo"
         style="background-image: url('https://khalti.com/static/images/logo.svg');
                background-size: contain;
                background-repeat: no-repeat;
                background-position: center;
                height: 40px;
                width: 100%;
                margin: 0 auto;"></div>
    <h4 class="mt-3">Khalti Payment</h4>
</div>

<div class="payment-modal-body p-4">
    @if (!string.IsNullOrEmpty(Model.Error))
    {
        <div class="alert alert-danger">@Model.Error</div>
    }

    <form method="post" action="@Url.Action("VerifyCredentials", "Payment")">
        <input type="hidden" name="method" value="@Model.Method" />
        <input type="hidden" name="orderId" value="@Model.OrderId" />

        <div class="mb-3">
            <label class="form-label">Khalti ID</label>
            <input type="text" name="username" class="form-control form-control-lg" placeholder="Enter your Khalti ID" required>
        </div>

        <div class="mb-4">
            <label class="form-label">MPIN</label>
            <div class="input-group">
                <input type="password" name="mpin" id="mpinField" class="form-control form-control-lg" placeholder="Enter your MPIN" required>
                <button type="button" id="togglePassword" class="btn btn-outline-secondary">
                    <i class="bi bi-eye"></i>
                </button>
            </div>
        </div>

        <div class="d-grid gap-2">
            <button type="submit" class="btn btn-lg payment-btn-primary text-white">
                <i class="bi bi-lock me-2"></i> Login to Khalti
            </button>
            <button type="button" class="btn btn-outline-secondary btn-lg cancel-payment" data-orderid="@Model.OrderId">
                <i class="bi bi-x-circle me-2"></i> Cancel Payment
            </button>
        </div>
    </form>
</div>

<div class="payment-modal-footer text-center p-3">
    <small class="text-muted">Secure payment by Khalti</small>
    @if (Model.AttemptsLeft < 3)
    {
        <div class="mt-2 text-danger">Attempts left: <strong>@Model.AttemptsLeft</strong></div>
    }
</div>

<script>
    document.getElementById('togglePassword').addEventListener('click', function() {
        const passwordField = document.getElementById('mpinField');
        const icon = this.querySelector('i');

        if (passwordField.type === 'password') {
            passwordField.type = 'text';
            icon.classList.remove('bi-eye');
            icon.classList.add('bi-eye-slash');
        } else {
            passwordField.type = 'password';
            icon.classList.remove('bi-eye-slash');
            icon.classList.add('bi-eye');
        }
    });
</script>