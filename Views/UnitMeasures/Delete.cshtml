@using InventorySolution.Models.Entities
@model UnitMeasure
@{
    ViewData["Title"] = "Delete Unit Measure";
    Layout = "_AdminLayout";
}

<div class="container-fluid px-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mt-4">Delete Unit Measure</h1>
        <a asp-action="Index" class="btn btn-outline-purple">
            <i class="bi bi-arrow-left me-1"></i> Back to List
        </a>
    </div>

    <div class="card mb-4">
        <div class="card-header bg-danger text-white">
            <i class="bi bi-exclamation-octagon me-1"></i> Confirm Deletion
        </div>
        <div class="card-body">
            <h5 class="text-danger">Are you sure you want to delete this unit measure?</h5>
            <p class="text-muted">
                This action cannot be undone. Products using this unit measure will need to be updated.
            </p>

            <div class="card border-danger mb-3">
                <div class="card-body">
                    <h5 class="card-title">@Model.Name</h5>
                    <div class="row">
                        <div class="col-md-6">
                            <p class="card-text"><strong>Unit ID:</strong> @Model.Id</p>
                        </div>
                    </div>
                </div>
            </div>

            <form asp-action="Delete" class="mt-4">
                <input type="hidden" asp-for="Id" />
                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash me-1"></i> Confirm Delete
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>