@{
    ViewData["Title"] = "Reports Dashboard";
    Layout = "_AdminLayout";
}

<style>
    :root {
        --primary-dark: #4B0082; /* Mozilla deep purple */
        --primary-light: #9400D3; /* Mozilla light purple */
        --accent-purple: #A200FF; /* Mozilla vibrant purple */
        --light-bg: #F5F0FF; /* Light purple background */
        --card-shadow: 0 8px 16px rgba(75, 0, 130, 0.2);
    }

    .report-card {
        transition: all 0.3s ease;
        border-radius: 12px;
        overflow: hidden;
        border: none;
        background: linear-gradient(135deg, var(--primary-light) 0%, var(--primary-dark) 100%);
        box-shadow: var(--card-shadow);
        height: 100%;
    }

        .report-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 24px rgba(75, 0, 130, 0.3);
        }

        .report-card .card-body {
            padding: 2.5rem 1.5rem;
            color: white;
        }

    .card-title {
        font-weight: 600;
    }

    .btn-report {
        background: white;
        color: var(--primary-dark);
        border: none;
        padding: 10px 25px;
        border-radius: 30px;
        font-weight: 600;
        letter-spacing: 0.5px;
        transition: all 0.3s;
        text-decoration: none;
        display: inline-block;
    }

        .btn-report:hover {
            background: var(--accent-purple);
            transform: scale(1.05);
            color: white;
        }

    .dashboard-header {
        background: linear-gradient(90deg, var(--primary-dark) 0%, var(--accent-purple) 100%);
        color: white;
        padding: 2rem 0;
        border-radius: 0 0 20px 20px;
        margin-bottom: 3rem;
    }

    .icon-container {
        width: 80px;
        height: 80px;
        background: rgba(255, 255, 255, 0.2);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 1rem;
    }
</style>

<div class="dashboard-header text-center">
    <div class="container">
        <h1 class="display-4 mb-4">Business Intelligence Reports</h1>
        <p class="lead">Access monthly order and shipment analytics</p>
    </div>
</div>

