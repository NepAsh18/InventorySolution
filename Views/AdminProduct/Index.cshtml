@model IEnumerable<InventorySolution.Models.Entities.Product>
@{
    ViewData["Title"] = "Product Inventory";
    Layout = "_AdminLayout";
}

<div class="header-gradient py-4">
    <div class="container">
        <div class="d-flex flex-column flex-md-row justify-content-between align-items-center">
            <div class="text-center text-md-start mb-3 mb-md-0">
                <h1 class="display-5 fw-bold"><i class="bi bi-box-seam me-2"></i>Product Inventory</h1>
                <p class="lead mb-0">Manage your products and track inventory</p>
            </div>
            <a asp-action="Create" class="btn btn-light">
                <i class="bi bi-plus-circle me-1"></i> Add New Product
            </a>
        </div>
    </div>
</div>

<div class="container py-4">
    <!-- Search Panel -->
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-header bg-primary text-white py-3">
            <h5 class="mb-0"><i class="bi bi-search me-2"></i>Search Products</h5>
        </div>
        <div class="card-body">
            <form asp-action="Index" method="get" class="row g-3">
                <div class="col-md-8">
                    <div class="input-group">
                        <input type="text" name="searchString" class="form-control form-control-lg"
                               placeholder="Search by product name..." value="@ViewBag.CurrentFilter">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-search"></i> Search
                        </button>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="d-flex justify-content-end">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-repeat"></i> Reset
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Restock Alerts -->
    @if (ViewBag.CriticalAlerts != null && ViewBag.CriticalAlerts.Count > 0)
    {
        <div class="alert alert-warning mb-4">
            <div class="d-flex align-items-center">
                <i class="bi bi-exclamation-triangle-fill fs-3 me-3"></i>
                <div>
                    <h5 class="mb-1">Restock Needed</h5>
                    <p class="mb-0">@ViewBag.CriticalAlerts.Count product(s) below reorder level</p>
                </div>
                <span class="badge bg-danger ms-auto">@ViewBag.CriticalAlerts.Count critical</span>
            </div>
            <hr>
            <div class="row mt-3">
                @foreach (var alert in ViewBag.CriticalAlerts)
                {
                    <div class="col-md-6 mb-3">
                        <div class="d-flex align-items-center p-3 border rounded bg-light">
                            @if (!string.IsNullOrEmpty(alert.Product.ImagePath))
                            {
                                <img src="@alert.Product.ImagePath" class="rounded me-3" style="width: 60px; height: 60px; object-fit: cover;">
                            }
                            <div class="flex-grow-1">
                                <h6 class="mb-0">@alert.Product.Name</h6>
                                <div class="text-danger small">
                                    Stock: @alert.Product.Quantity | Reorder: @alert.Product.ReorderLevel
                                </div>
                            </div>
                            <a asp-action="ManageBatches" asp-route-id="@alert.Product.Id" class="btn btn-sm btn-outline-danger">
                                <i class="bi bi-arrow-repeat me-1"></i> Restock
                            </a>
                        </div>
                    </div>
                }
            </div>
        </div>
    }

    <!-- Products Table -->
    <div class="card border-0 shadow-sm">
        <div class="card-header bg-primary text-white py-3">
            <h5 class="mb-0"><i class="bi bi-list me-2"></i>Product List</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Product</th>
                            <th>Category</th>
                            <th>Price</th>
                            <th>Stock</th>
                            <th>Status</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            var earliestExpiry = item.Batches?.Any() == true ? item.Batches.Min(b => b.ExpiryDate) : (DateTime?)null;
                            var isExpired = earliestExpiry.HasValue && earliestExpiry < DateTime.Today;
                            var isLowStock = item.Quantity < item.ReorderLevel;
                            var statusClass = isLowStock ? "warning" : (isExpired ? "danger" : "success");
                            var statusText = isLowStock ? "Low Stock" : (isExpired ? "Expired" : "In Stock");

                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        @if (!string.IsNullOrEmpty(item.ImagePath))
                                        {
                                            <img src="@item.ImagePath" class="rounded me-3" style="width: 50px; height: 50px; object-fit: cover;">
                                        }
                                        else
                                        {
                                            <div class="bg-light rounded d-flex align-items-center justify-content-center me-3"
                                                 style="width: 50px; height: 50px;">
                                                <i class="bi bi-image text-muted"></i>
                                            </div>
                                        }
                                        <div>
                                            <div class="fw-bold">@item.Name</div>
                                            <div class="text-muted small">
                                                @(item.Description?.Length > 30 ? item.Description.Substring(0, 30) + "..." : item.Description)
                                            </div>
                                        </div>
                                    </div>
                                </td>
                                <td>@(item.Category?.Name ?? "N/A")</td>
                                <td class="fw-bold">Rs. @item.Price.ToString("N2")</td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <span class="me-2">@item.Quantity</span>
                                        <span class="badge bg-@statusClass">@statusText</span>
                                    </div>
                                </td>
                                <td>
                                    @if (earliestExpiry.HasValue)
                                    {
                                        <span class="@(isExpired ? "text-danger" : "text-muted")">
                                            @earliestExpiry.Value.ToString("dd MMM yyyy")
                                        </span>
                                    }
                                    else
                                    {
                                        <span>N/A</span>
                                    }
                                </td>
                                <td class="text-end">
                                    <div class="d-flex justify-content-end gap-2">
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary" title="Edit">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-action="ManageBatches" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info" title="Batches">
                                            <i class="bi bi-layers"></i>
                                        </a>
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info" title="Details">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" title="Delete">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="6" class="text-center py-5 text-muted">
                                    <i class="bi bi-inbox me-2"></i> No products found
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>