@using InventorySolution.Models.Entities
@model InventorySolution.Models.Entities.Product
@{
    ViewData["Title"] = "Product Details";
    Layout = "_AdminLayout";
}

<div class="header-gradient py-4">
    <div class="container">
        <div class="d-flex flex-column flex-md-row justify-content-between align-items-center">
            <div class="text-center text-md-start mb-3 mb-md-0">
                <h1 class="display-5 fw-bold"><i class="bi bi-info-circle me-2"></i>Product Details</h1>
                <p class="lead mb-0">View detailed information about this product</p>
            </div>
            <a asp-action="Index" class="btn btn-light">
                <i class="bi bi-arrow-left me-1"></i> Back to List
            </a>
        </div>
    </div>
</div>

<div class="container py-4">
    <div class="row">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-primary text-white py-3">
                    <h5 class="mb-0"><i class="bi bi-box-seam me-2"></i>Product Information</h5>
                </div>
                <div class="card-body">
                    <div class="row g-4">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold text-muted">Product Name</label>
                                <p class="fs-5">@Model.Name</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold text-muted">Category</label>
                                <p class="fs-5">@(Model.Category?.Name ?? "N/A")</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold text-muted">Unit of Measure</label>
                                <p class="fs-5">@(Model.UnitMeasure?.Name ?? "N/A")</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold text-muted">Selling Price</label>
                                <p class="fs-5">Rs. @Model.Price.ToString("N2")</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold text-muted">Current Stock</label>
                                <p class="fs-5">@Model.Quantity</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold text-muted">Reorder Level</label>
                                <p class="fs-5">@Model.ReorderLevel</p>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="mb-3">
                                <label class="form-label fw-bold text-muted">Description</label>
                                <p class="fs-5">@Model.Description</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card border-0 shadow-sm">
                <div class="card-header bg-info text-white py-3">
                    <h5 class="mb-0"><i class="bi bi-layers me-2"></i>Stock Batches</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th>Batch ID</th>
                                    <th>Quantity</th>
                                    <th>Cost Price</th>
                                    <th>Manufactured</th>
                                    <th>Expiry</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Batches != null && Model.Batches.Any())
                                {
                                    foreach (var batch in Model.Batches)
                                    {
                                        <tr>
                                            <td class="fw-bold">#@batch.Id</td>
                                            <td>@batch.Quantity</td>
                                            <td>Rs. @batch.PurchasePrice.ToString("N2")</td>
                                            <td>@batch.ManufacturedDate.ToString("dd MMM yyyy")</td>
                                            <td>@batch.ExpiryDate.ToString("dd MMM yyyy")</td>
                                            <td>
                                                @switch (batch.Status)
                                                {
                                                    case BatchStatus.Active:
                                                        <span class="badge bg-success">Active</span>
                                                        break;
                                                    case BatchStatus.ExpiringSoon:
                                                        <span class="badge bg-warning">Expiring Soon</span>
                                                        break;
                                                    case BatchStatus.Expired:
                                                        <span class="badge bg-danger">Expired</span>
                                                        break;
                                                }
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="6" class="text-center py-4 text-muted">
                                            <i class="bi bi-inbox me-1"></i> No batches recorded
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-primary text-white py-3">
                    <h5 class="mb-0"><i class="bi bi-image me-2"></i>Product Image</h5>
                </div>
                <div class="card-body text-center p-4">
                    @if (!string.IsNullOrEmpty(Model.ImagePath))
                    {
                        <img src="@Model.ImagePath" class="img-fluid rounded" alt="@Model.Name">
                    }
                    else
                    {
                        <div class="bg-light d-flex align-items-center justify-content-center rounded"
                             style="height: 200px;">
                            <div class="text-center">
                                <i class="bi bi-image text-muted fs-1 mb-2"></i>
                                <p class="text-muted mb-0">No image available</p>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <div class="d-grid gap-2">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary btn-lg">
                    <i class="bi bi-pencil me-1"></i> Edit Product
                </a>
                <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger btn-lg">
                    <i class="bi bi-trash me-1"></i> Delete Product
                </a>
            </div>
        </div>
    </div>
</div>