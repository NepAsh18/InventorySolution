@{
   
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>NepaliMart Admin Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
        :root {
            --primary: #4e0c8c;
            --primary-light: #6a11cb;
            --secondary: #2575fc;
            --accent: #ff7e5f;
            --dark: #1e223f;
            --light: #f8f9ff;
            --success: #00b09b;
            --warning: #f09819;
            --danger: #e43f5a;
            --info: #1e88e5;
        }

        body {
            background: linear-gradient(135deg, #f0f4ff 0%, #e6e9ff 100%);
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            min-height: 100vh;
            padding-bottom: 2rem;
            overflow-x: hidden;
            color: var(--dark);
        }

        .dashboard-container {
            max-width: 1400px;
            margin: 0 auto;
            padding: 20px;
        }

        .header {
            background: linear-gradient(135deg, var(--primary) 0%, var(--primary-light) 100%);
            border-radius: 20px;
            padding: 25px 30px;
            margin-bottom: 30px;
            box-shadow: 0 10px 30px rgba(78, 12, 140, 0.2);
            position: relative;
            overflow: hidden;
        }

            .header::before {
                content: "";
                position: absolute;
                top: -50px;
                right: -50px;
                width: 250px;
                height: 250px;
                background: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><path fill="none" stroke="rgba(255,255,255,0.1)" stroke-width="2" d="M20,20 C40,10 60,10 80,20 C90,40 90,60 80,80 C60,90 40,90 20,80 C10,60 10,40 20,20 Z"/></svg>');
                opacity: 0.3;
            }

        .stat-card {
            background: white;
            border-radius: 18px;
            padding: 25px;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.05);
            transition: all 0.3s ease;
            height: 100%;
            border: none;
            position: relative;
            overflow: hidden;
        }

            .stat-card::before {
                content: "";
                position: absolute;
                top: 0;
                left: 0;
                width: 5px;
                height: 100%;
            }

            .stat-card:nth-child(1)::before {
                background: var(--primary-light);
            }

            .stat-card:nth-child(2)::before {
                background: var(--info);
            }

            .stat-card:nth-child(3)::before {
                background: var(--success);
            }

            .stat-card:nth-child(4)::before {
                background: var(--warning);
            }

            .stat-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 12px 25px rgba(0, 0, 0, 0.1);
            }

        .stat-icon {
            width: 60px;
            height: 60px;
            border-radius: 15px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 28px;
            margin-bottom: 20px;
        }

        .stat-card:nth-child(1) .stat-icon {
            background: rgba(106, 17, 203, 0.15);
            color: var(--primary-light);
        }

        .stat-card:nth-child(2) .stat-icon {
            background: rgba(30, 136, 229, 0.15);
            color: var(--info);
        }

        .stat-card:nth-child(3) .stat-icon {
            background: rgba(0, 176, 155, 0.15);
            color: var(--success);
        }

        .stat-card:nth-child(4) .stat-icon {
            background: rgba(240, 152, 25, 0.15);
            color: var(--warning);
        }

        .card {
            border-radius: 20px;
            border: none;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.05);
            margin-bottom: 30px;
            overflow: hidden;
        }

        .card-header {
            background: white;
            border-bottom: 1px solid rgba(0,0,0,0.05);
            padding: 20px 25px;
            font-weight: 600;
            font-size: 18px;
            color: var(--dark);
        }

        .chart-container {
            position: relative;
            height: 250px;
            padding: 15px 20px;
        }

        .table-container {
            padding: 0 20px 20px;
        }

        table {
            width: 100%;
            border-collapse: separate;
            border-spacing: 0;
        }

        thead th {
            background: rgba(245, 247, 250, 0.8);
            padding: 15px 20px;
            text-align: left;
            font-weight: 600;
            color: var(--dark);
            border-bottom: 2px solid rgba(0,0,0,0.05);
        }

        tbody td {
            padding: 15px 20px;
            border-bottom: 1px solid rgba(0,0,0,0.05);
        }

        tbody tr:last-child td {
            border-bottom: none;
        }

        tbody tr:hover {
            background: rgba(106, 17, 203, 0.03);
        }

        .status-badge {
            padding: 6px 12px;
            border-radius: 20px;
            font-weight: 500;
            font-size: 13px;
        }

        .badge-completed {
            background: rgba(0, 176, 155, 0.15);
            color: var(--success);
        }

        .badge-processing {
            background: rgba(30, 136, 229, 0.15);
            color: var(--info);
        }

        .badge-shipped {
            background: rgba(240, 152, 25, 0.15);
            color: var(--warning);
        }

        .badge-cancelled {
            background: rgba(228, 63, 90, 0.15);
            color: var(--danger);
        }

        .low-stock-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 15px 20px;
            border-bottom: 1px solid rgba(0,0,0,0.05);
            transition: all 0.3s ease;
        }

            .low-stock-item:last-child {
                border-bottom: none;
            }

            .low-stock-item:hover {
                background: rgba(106, 17, 203, 0.03);
                transform: translateX(5px);
            }

        .stock-badge {
            padding: 5px 12px;
            border-radius: 20px;
            font-weight: 500;
            font-size: 13px;
        }

        .stock-low {
            background: rgba(228, 63, 90, 0.15);
            color: var(--danger);
        }

        .stock-very-low {
            background: rgba(240, 152, 25, 0.15);
            color: var(--warning);
        }

        .himalayan-bg {
            position: fixed;
            bottom: 0;
            left: 0;
            right: 0;
            height: 150px;
            background: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1200 120" preserveAspectRatio="none"><path fill="rgba(78,12,140,0.05)" d="M0,0V46.29c47.79,22.2,103.59,32.17,158,28,70.36-5.37,136.33-33.31,206.8-37.5C438.64,32.43,512.34,53.67,583,72.05c69.27,18,138.3,24.88,209.4,13.08,36.15-6,69.85-17.84,104.45-29.34C989.49,25,1113-14.29,1200,52.47V0Z" opacity=".25"></path><path fill="rgba(78,12,140,0.1)" d="M0,0V15.81C13,36.92,27.64,56.86,47.69,72.05,99.41,111.27,165,111,224.58,91.58c31.15-10.15,60.09-26.07,89.67-39.8,40.92-19,84.73-46,130.83-49.67,36.26-2.85,70.9,9.42,98.6,31.56,31.77,25.39,62.32,62,103.63,73,40.44,10.79,81.35-6.69,119.13-24.28s75.16-39,116.92-43.05c59.73-5.85,113.28,22.88,168.9,38.84,30.2,8.66,59,6.17,87.09-7.5,22.43-10.89,48-26.93,60.65-49.24V0Z" opacity=".5"></path></svg>');
            background-size: cover;
            z-index: -1;
        }

        .nepali-pattern {
            position: absolute;
            top: 0;
            right: 0;
            width: 180px;
            height: 180px;
            background: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><path fill="none" stroke="rgba(255,255,255,0.1)" stroke-width="2" d="M20,20 C40,10 60,10 80,20 C90,40 90,60 80,80 C60,90 40,90 20,80 C10,60 10,40 20,20 Z"/><path fill="none" stroke="rgba(255,255,255,0.1)" stroke-width="1" d="M50,0 L50,100 M0,50 L100,50"/></svg>');
            opacity: 0.2;
            z-index: 0;
        }

        .page-title {
            font-weight: 700;
            font-size: 28px;
            color: white;
            margin-bottom: 5px;
        }

        .breadcrumb {
            background: transparent;
            padding: 0;
            margin: 0;
        }

        .breadcrumb-item a {
            color: rgba(255,255,255,0.8);
            text-decoration: none;
        }

        .breadcrumb-item.active {
            color: white;
        }

        .breadcrumb-item + .breadcrumb-item::before {
            color: rgba(255,255,255,0.5);
        }

        .user-info {
            display: flex;
            align-items: center;
            justify-content: flex-end;
        }

        .user-avatar {
            width: 45px;
            height: 45px;
            border-radius: 12px;
            background: rgba(255,255,255,0.2);
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 20px;
            color: white;
            margin-left: 15px;
        }

        .card-title {
            font-weight: 600;
            font-size: 20px;
            margin-bottom: 0;
        }

        .view-all {
            color: var(--primary-light);
            text-decoration: none;
            font-weight: 500;
            font-size: 14px;
            display: inline-flex;
            align-items: center;
        }

            .view-all i {
                margin-left: 5px;
                transition: transform 0.3s ease;
            }

            .view-all:hover i {
                transform: translateX(3px);
            }

        @@media (max-width: 768px) {
            .header

        {
            padding: 20px;
        }

        .page-title {
            font-size: 24px;
        }

        .stat-card {
            padding: 20px;
        }

        }</style>
</head>
<body>
    <div class="dashboard-container">
        <!-- Header -->
        <div class="header">
            <div class="nepali-pattern"></div>
            <div class="row align-items-center">
                <div class="col-md-6">
                    <h1 class="page-title">Dashboard</h1>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="#">Home</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Dashboard</li>
                        </ol>
                    </nav>
                </div>
                <div class="col-md-6">
                    <div class="user-info">
                        <div>
                            <h5 class="text-white mb-0">Admin User</h5>
                            <small class="text-white-50">Administrator</small>
                        </div>
                        <div class="user-avatar">
                            <i class="bi bi-person"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Stats Cards -->
        <div class="row mb-4">
            <div class="col-md-3 col-sm-6 mb-4">
                <div class="stat-card">
                    <div class="stat-icon">
                        <i class="bi bi-box-seam"></i>
                    </div>
                    <h3 class="mb-2">254</h3>
                    <p class="text-muted mb-1">Total Products</p>
                    <small class="text-success"><i class="bi bi-arrow-up"></i> 12 this month</small>
                </div>
            </div>

            <div class="col-md-3 col-sm-6 mb-4">
                <div class="stat-card">
                    <div class="stat-icon">
                        <i class="bi bi-cart-check"></i>
                    </div>
                    <h3 class="mb-2">1,324</h3>
                    <p class="text-muted mb-1">Total Orders</p>
                    <small class="text-success"><i class="bi bi-arrow-up"></i> 42 this week</small>
                </div>
            </div>

            <div class="col-md-3 col-sm-6 mb-4">
                <div class="stat-card">
                    <div class="stat-icon">
                        <i class="bi bi-people"></i>
                    </div>
                    <h3 class="mb-2">587</h3>
                    <p class="text-muted mb-1">Total Customers</p>
                    <small class="text-success"><i class="bi bi-arrow-up"></i> 28 this month</small>
                </div>
            </div>

            <div class="col-md-3 col-sm-6 mb-4">
                <div class="stat-card">
                    <div class="stat-icon">
                        <i class="bi bi-currency-rupee"></i>
                    </div>
                    <h3 class="mb-2">Rs 12,54,000</h3>
                    <p class="text-muted mb-1">Revenue</p>
                    <small class="text-success"><i class="bi bi-arrow-up"></i> 18.5% from last month</small>
                </div>
            </div>
        </div>

        <!-- Charts and Tables -->
        <div class="row">
            <!-- Left Column -->
            <div class="col-lg-8">
                <!-- Recent Orders -->
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <div class="card-title">Recent Orders</div>
                        <a href="#" class="view-all">View All <i class="bi bi-arrow-right"></i></a>
                    </div>
                    <div class="table-container">
                        <table>
                            <thead>
                                <tr>
                                    <th>Order ID</th>
                                    <th>Customer</th>
                                    <th>Date</th>
                                    <th>Amount</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>#ORD-1001</td>
                                    <td>Raj Shrestha</td>
                                    <td>2023-06-15</td>
                                    <td>Rs 12,500</td>
                                    <td><span class="status-badge badge-completed">Completed</span></td>
                                </tr>
                                <tr>
                                    <td>#ORD-1002</td>
                                    <td>Sita Rai</td>
                                    <td>2023-06-14</td>
                                    <td>Rs 8,950</td>
                                    <td><span class="status-badge badge-processing">Processing</span></td>
                                </tr>
                                <tr>
                                    <td>#ORD-1003</td>
                                    <td>Hari Thapa</td>
                                    <td>2023-06-14</td>
                                    <td>Rs 21,575</td>
                                    <td><span class="status-badge badge-shipped">Shipped</span></td>
                                </tr>
                                <tr>
                                    <td>#ORD-1004</td>
                                    <td>Gita Gurung</td>
                                    <td>2023-06-13</td>
                                    <td>Rs 6,530</td>
                                    <td><span class="status-badge badge-cancelled">Cancelled</span></td>
                                </tr>
                                <tr>
                                    <td>#ORD-1005</td>
                                    <td>Bikram Basnet</td>
                                    <td>2023-06-12</td>
                                    <td>Rs 17,890</td>
                                    <td><span class="status-badge badge-completed">Completed</span></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>

                <!-- Charts Row -->
                <div class="row">
                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-header">
                                <div class="card-title">Monthly Sales (Rs)</div>
                            </div>
                            <div class="chart-container">
                                <canvas id="monthlySalesChart"></canvas>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-header">
                                <div class="card-title">Sales by Category</div>
                            </div>
                            <div class="chart-container">
                                <canvas id="salesCategoryChart"></canvas>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Right Column -->
            <div class="col-lg-4">
                <!-- Low Stock Items -->
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <div class="card-title">Low Stock Items</div>
                        <a href="#" class="view-all">View All <i class="bi bi-arrow-right"></i></a>
                    </div>
                    <div>
                        <div class="low-stock-item">
                            <div>
                                <h6 class="mb-1">Khukuri</h6>
                                <small class="text-muted">SKU: KH-100</small>
                            </div>
                            <span class="stock-badge stock-low">5 left</span>
                        </div>
                        <div class="low-stock-item">
                            <div>
                                <h6 class="mb-1">Dhaka Topi</h6>
                                <small class="text-muted">SKU: DT-200</small>
                            </div>
                            <span class="stock-badge stock-very-low">3 left</span>
                        </div>
                        <div class="low-stock-item">
                            <div>
                                <h6 class="mb-1">Pashmina Shawl</h6>
                                <small class="text-muted">SKU: PS-300</small>
                            </div>
                            <span class="stock-badge stock-very-low">2 left</span>
                        </div>
                        <div class="low-stock-item">
                            <div>
                                <h6 class="mb-1">Thangka Painting</h6>
                                <small class="text-muted">SKU: TP-400</small>
                            </div>
                            <span class="stock-badge stock-low">1 left</span>
                        </div>
                        <div class="low-stock-item">
                            <div>
                                <h6 class="mb-1">Singing Bowl</h6>
                                <small class="text-muted">SKU: SB-500</small>
                            </div>
                            <span class="stock-badge stock-very-low">4 left</span>
                        </div>
                    </div>
                </div>

                <!-- Revenue Chart -->
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Revenue Overview</div>
                    </div>
                    <div class="chart-container">
                        <canvas id="revenueChart"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Himalayan Background -->
    <div class="himalayan-bg"></div>

    <script>
        // Monthly Sales Chart
        const monthlyCtx = document.getElementById('monthlySalesChart').getContext('2d');
        const monthlyChart = new Chart(monthlyCtx, {
            type: 'bar',
            data: {
                labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec'],
                datasets: [{
                    label: 'Sales (Rs)',
                    data: [85000, 92000, 78000, 110000, 125000, 154000, 98000, 132000, 145000, 160000, 183000, 210000],
                    backgroundColor: 'rgba(106, 17, 203, 0.2)',
                    borderColor: 'rgba(106, 17, 203, 1)',
                    borderWidth: 2,
                    borderRadius: 6,
                    borderSkipped: false,
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        display: false
                    },
                    tooltip: {
                        callbacks: {
                            label: function(context) {
                                return 'Rs ' + context.parsed.y.toLocaleString();
                            }
                        }
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        grid: {
                            color: 'rgba(0,0,0,0.05)'
                        },
                        ticks: {
                            callback: function(value) {
                                return 'Rs ' + (value/1000).toFixed(0) + 'k';
                            }
                        }
                    },
                    x: {
                        grid: {
                            display: false
                        }
                    }
                }
            }
        });

        // Sales by Category Chart
        const categoryCtx = document.getElementById('salesCategoryChart').getContext('2d');
        const categoryChart = new Chart(categoryCtx, {
            type: 'doughnut',
            data: {
                labels: ['Handicrafts', 'Clothing', 'Metalwork', 'Paintings', 'Jewelry'],
                datasets: [{
                    data: [35, 25, 15, 15, 10],
                    backgroundColor: [
                        'rgba(106, 17, 203, 0.8)',
                        'rgba(30, 136, 229, 0.8)',
                        'rgba(0, 176, 155, 0.8)',
                        'rgba(240, 152, 25, 0.8)',
                        'rgba(228, 63, 90, 0.8)'
                    ],
                    borderColor: [
                        'rgba(106, 17, 203, 1)',
                        'rgba(30, 136, 229, 1)',
                        'rgba(0, 176, 155, 1)',
                        'rgba(240, 152, 25, 1)',
                        'rgba(228, 63, 90, 1)'
                    ],
                    borderWidth: 2
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        position: 'right'
                    },
                    tooltip: {
                        callbacks: {
                            label: function(context) {
                                return context.label + ': ' + context.parsed + '%';
                            }
                        }
                    }
                },
                cutout: '65%'
            }
        });

        // Revenue Chart
        const revenueCtx = document.getElementById('revenueChart').getContext('2d');
        const revenueChart = new Chart(revenueCtx, {
            type: 'line',
            data: {
                labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun'],
                datasets: [{
                    label: 'Revenue (Rs)',
                    data: [185000, 210000, 192000, 235000, 254000, 298000],
                    fill: true,
                    backgroundColor: 'rgba(106, 17, 203, 0.1)',
                    borderColor: 'rgba(106, 17, 203, 1)',
                    borderWidth: 3,
                    pointBackgroundColor: 'rgba(106, 17, 203, 1)',
                    pointBorderColor: '#fff',
                    pointBorderWidth: 2,
                    pointRadius: 5,
                    tension: 0.3
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        display: false
                    },
                    tooltip: {
                        callbacks: {
                            label: function(context) {
                                return 'Rs ' + context.parsed.y.toLocaleString();
                            }
                        }
                    }
                },
                scales: {
                    y: {
                        beginAtZero: false,
                        grid: {
                            color: 'rgba(0,0,0,0.05)'
                        },
                        ticks: {
                            callback: function(value) {
                                return 'Rs ' + (value/1000).toFixed(0) + 'k';
                            }
                        }
                    },
                    x: {
                        grid: {
                            display: false
                        }
                    }
                }
            }
        });
    </script>
</body>
</html>