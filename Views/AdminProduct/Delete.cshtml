@model InventorySolution.Models.Entities.Product
@{
    ViewData["Title"] = "Delete Product";
    Layout = "_AdminLayout";
}

<div class="header-gradient py-4">
    <div class="container">
        <div class="d-flex flex-column flex-md-row justify-content-between align-items-center">
            <div class="text-center text-md-start mb-3 mb-md-0">
                <h1 class="display-5 fw-bold"><i class="bi bi-trash me-2"></i>Delete Product</h1>
                <p class="lead mb-0">Remove product from inventory</p>
            </div>
            <a asp-action="Index" class="btn btn-light">
                <i class="bi bi-arrow-left me-1"></i> Back to List
            </a>
        </div>
    </div>
</div>

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-danger text-white py-3">
                    <h5 class="mb-0"><i class="bi bi-exclamation-octagon me-2"></i>Confirm Deletion</h5>
                </div>
                <div class="card-body">
                    <h5 class="text-danger mb-4">Are you sure you want to delete this product?</h5>
                    <p class="text-muted">This action cannot be undone and will permanently remove the product from the system.</p>

                    <div class="card border-danger mb-4">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-8">
                                    <h5 class="card-title">@Model.Name</h5>
                                    <p class="card-text">@Model.Description</p>
                                    <div class="row mt-3">
                                        <div class="col-md-4">
                                            <p class="card-text"><strong>Price:</strong> Rs. @Model.Price.ToString("N2")</p>
                                        </div>
                                        <div class="col-md-4">
                                            <p class="card-text"><strong>Stock:</strong> @Model.Quantity</p>
                                        </div>
                                        <div class="col-md-4">
                                            <p class="card-text"><strong>Expiry:</strong> @Model.ExpiryDate.ToString("dd MMM yyyy")</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    @if (!string.IsNullOrEmpty(Model.ImagePath))
                                    {
                                        <img src="@Model.ImagePath" class="img-fluid rounded" alt="@Model.Name">
                                    }
                                    else
                                    {
                                        <div class="bg-light border rounded d-flex align-items-center justify-content-center" style="height: 100px;">
                                            <span class="text-muted">No image</span>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex justify-content-end">
                            <button type="submit" class="btn btn-danger btn-lg me-2">
                                <i class="bi bi-trash me-1"></i> Confirm Delete
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
                                <i class="bi bi-x-circle me-1"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>