@using InventorySolution.Models.Entities
@model Location
@{
    ViewData["Title"] = "Delete Location";
    Layout = "_AdminLayout";
}

<div class="container-fluid px-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mt-4">Delete Location</h1>
        <a asp-action="Index" class="btn btn-outline-purple">
            <i class="bi bi-arrow-left me-1"></i> Back to List
        </a>
    </div>

    <div class="card mb-4">
        <div class="card-header bg-danger text-white">
            <i class="bi bi-exclamation-octagon me-1"></i> Confirm Deletion
        </div>
        <div class="card-body">
            <h5 class="text-danger">Are you sure you want to delete this location?</h5>
            <p class="text-muted">This action cannot be undone.</p>

            <dl class="row mb-4">
                <dt class="col-sm-3">ID:</dt>
                <dd class="col-sm-9">@Model.Id</dd>

                <dt class="col-sm-3">Name:</dt>
                <dd class="col-sm-9">@Model.Name</dd>

                <dt class="col-sm-3">Price:</dt>
                <dd class="col-sm-9">Rs. @Model.Price.ToString("N2")</dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-danger me-2">
                        <i class="bi bi-trash me-1"></i> Confirm Delete
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-x-circle me-1"></i> Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>